<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ff000000">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:text="1번 선택지"
                android:id="@+id/btn_selector1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffa121"
                android:textSize="25dp"/>
            <Button
                android:text="2번 선택지"
                android:id="@+id/btn_selector2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffa1ff21"
                android:textSize="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="질문 준비 중 입니다."
                android:textSize="20dp"
                android:textColor="#ff000000"/>
            <TextView
                android:id="@+id/tv_q_number"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/20"
                android:textSize="20dp"
                android:textColor="#ff212121"/>



        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:text="3번 선택지"
                android:id="@+id/btn_selector3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff21ffa1"
                android:textSize="25dp"/>
            <Button
                android:text="4번 선택지"
                android:id="@+id/btn_selector4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffa121ff"
                android:textSize="25dp"/>

        </LinearLayout>
    </LinearLayout>
