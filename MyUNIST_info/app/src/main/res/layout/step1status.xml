<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fba733">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="종합 평가"
            android:id="@+id/title"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textIsSelectable="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#8185ff">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/engineering" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="과학/공학"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="10dp" />
            <ProgressBar
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/engine"
                android:max="12"
                android:progress="10"
                android:layout_gravity="center_vertical"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_custom" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#f96480">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/management" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="디자인"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp" />
            <ProgressBar
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/design"
                android:max="12"
                android:progress="10"
                android:layout_gravity="center_vertical"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_custom" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#a8d565">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/design" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="경영"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="10dp" />
            <ProgressBar
                android:background="#c97dd5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/manage"
                android:max="12"
                android:progress="10"
                android:layout_gravity="center_vertical"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_custom" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dskfjsakfjaskfjlsda"
        android:id="@+id/txt2"
        android:layout_marginTop="35dp"
        android:textSize="15dp"
        android:textAlignment="center" />



</LinearLayout>